{
    "$id": "https://raw.githubusercontent.com/EOS-Solutions/Defaults/master/Schemas/Gordon/v1/packagefeed.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "MidiMessageType": {
            "type": "string",
            "enum": [
                "NoteOn",
                "NoteOff",
                "ControlChange",
                "ProgramChange"
            ]
        },
        "ChainItemType": {
            "type": "string",
            "enum": [
                "Output",
                "NoteToCC",
                "Filter"
            ]
        },
        "OutputChainItem": {
            "type": "object",
            "properties": {
                "Port": {
                    "type": "string"
                }
            }
        },
        "NoteToCCChainItem": {
            "type": "object",
            "properties": {
                "Channel": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 15
                },
                "Value": {
                    "type": "string",
                    "anyOf": [
                        {
                            "const": "NoteNumber",
                            "description": "Use the MIDI note number as the controller value."
                        },
                        {
                            "const": "Velocity",
                            "description": "Use the MIDI note velocity as the controller value."
                        }
                    ]
                }
            }
        },
        "FilterChainItem": {
            "type": "object",
            "properties": {
                "Channel": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 15
                },
                "MessageType": {
                    "$ref": "#/definitions/MidiMessageType"
                },
                "Data1": {
                    "type": "string"
                },
                "Data2": {
                    "type": "string"
                }
            }
        }
    },
    "ChainItem": {
        "type": "object",
        "properties": {
            "Type": {
                "$ref": "#/definitions/ChainItemType"
            }
        },
        "allOf": [
            {
                "if": {
                    "properties": {
                        "Type": {
                            "const": "Output"
                        }
                    }
                },
                "then": {
                    "$ref": "#/definitions/OutputChainItem"
                }
            }
        ]
    },
    "type": "object",
    "properties": {
        "InputPorts": {
            "type": "array",
            "description": "A list of virtual input devices to create.",
            "items": {
                "type": "string"
            }
        },
        "OutputPorts": {
            "type": "array",
            "description": "A list of virtual output ports to create.",
            "items": {
                "type": "string"
            }
        },
        "Connections": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "InputPort": {
                        "type": "string"
                    },
                    "OutputPort": {
                        "type": "string"
                    },
                    "Chain": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/ChainItem"
                        }
                    }
                }
            }
        }
    }
}