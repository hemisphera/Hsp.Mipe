<Window x:Class="Hsp.MidiProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hsp.MidiProxy"
        xmlns:mvvm="clr-namespace:Eos.Mvvm;assembly=Eos.Mvvm"
        mc:Ignorable="d"
        d:DataContext="{x:Static local:Main.Instance}"
        Title="MainWindow" Height="600" Width="700" FontSize="15" FontFamily="Segoe UI">

  <DockPanel>

    <UniformGrid Columns="3" DockPanel.Dock="Top" Height="50">
      <Button Command="{Binding Path=AddCommand}" Content="+" />
      <Button Command="{Binding Path=ConnectAllCommand}" Content="I" Foreground="ForestGreen" />
      <Button Command="{Binding Path=DisconnectAllCommand}" Content="O" Foreground="Orange" />
    </UniformGrid>

    <ItemsControl ItemsSource="{Binding Path=Items}"
              HorizontalContentAlignment="Stretch"
              ItemTemplateSelector="{x:Static mvvm:UiSettings.ViewLocator}">
    </ItemsControl>

  </DockPanel>

</Window>
