<Window x:Class="Hsp.MidiProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hsp.MidiProxy"
        xmlns:mvvm="clr-namespace:Eos.Mvvm;assembly=Eos.Mvvm"
        mc:Ignorable="d"
        d:DataContext="{x:Static local:ContentHost.Instance}"
        Title="MIDIProxy" Height="600" Width="700" FontSize="15" FontFamily="Segoe UI">

    <ContentControl
        Content="{Binding Path=Content}"
        ContentTemplateSelector="{x:Static mvvm:UiSettings.ViewLocator}" />

</Window>